@model IEnumerable<GRUBSCHOOL.Application.ViewModels.AnoLectivoViewModel>

@{
    ViewData["Title"] = "Anos Lectivos";
}

<div class="col-md-12 col-sm-12  ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Ano Lectivo</h2>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <div class="table-responsive">
                <table class="table table-striped jambo_table bulk_action">
                    <thead>
                        <tr class="headings">
                            <th> <input type="checkbox" id="check-all" class="flat"></th>
                            <th class="column-title">Ano Lectivo </th>
                            <th class="column-title">Data de Início </th>
                            <th class="column-title">Data de Término </th>
                            <th class="column-title last"><span class="nobr">Acção</span></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="even pointer">
                                <td class="a-center ">
                                    <input type="checkbox" class="flat" name="table_records">
                                </td>
                                <td class=" ">@Html.DisplayFor(modelItem => item.Ano)</td>
                                <td class=" ">@Html.DisplayFor(modelItem => item.DataInicio)</td>
                                <td class=" ">@Html.DisplayFor(modelItem => item.DataTermino)</td>
                                <td class="last">
                                    <a asp-action="Edit" asp-route-id="@item.Ano"><i class="fa fa-pencil"></i> Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Ano"><i class="fa fa-file"></i> Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Ano"><i class="fa fa-trash"></i> Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>